<%- include('../partials/head') %>
  </head>

  <body class="bg-gradient-to-br from-red-100 via-white to-blue-100 min-h-screen">
    <%- include('../partials/nav') %>
      <main class="container mx-auto mt-16 p-8 bg-white rounded-2xl shadow-2xl max-w-md">
        <h1 class="text-3xl font-extrabold text-center text-gray-900 mb-2">
          Login to Airbnb
        </h1>
        <p class="text-gray-500 mb-8 text-center">Welcome back! Please sign in to continue.</p>
        <form action="/login" method="POST" class="space-y-6">

          <%- include('../partials/error') %>
            <!-- Username/Email -->
            <div>
              <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
              <div class="relative">
                <span class="absolute left-3 top-2.5 text-gray-400">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round"
                      d="M16 12H8m8 0a4 4 0 01-8 0m8 0v1a4 4 0 01-8 0V12"></path>
                  </svg>
                </span>
                <input type="email" name="email" id="email" placeholder="Enter your Email"
                  value="<%= oldInput.email ? oldInput.email : '' %>"
                  class="w-full pl-10 pr-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400"
                  required />
              </div>
            </div>
            <!-- Password -->
            <div>
              <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
              <div class="relative">
                <span class="absolute left-3 top-2.5 text-gray-400">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round"
                      d="M12 11c1.104 0 2-.896 2-2s-.896-2-2-2-2 .896-2 2 .896 2 2 2zm0 0v2m0 4h.01"></path>
                  </svg>
                </span>
                <input type="password" name="password" id="password" placeholder="Enter your Password"
                  class="w-full pl-10 pr-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400"
                  required />
              </div>
            </div>
            <!-- Submit Button -->
            <button type="submit"
              class="w-full bg-gradient-to-r from-red-500 via-pink-500 to-red-600 text-white py-3 rounded-lg font-bold hover:scale-105 hover:shadow-xl transition duration-300 shadow">
              Sign In
            </button>
        </form>
      </main>
  </body>

  </html>